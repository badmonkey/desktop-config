[user]
	name = Michael Fagan
	email = michael.fagan@penten.com
[push]
	default = simple
[core]
	editor = emacsclient
[diff]
	tool = ediff
[difftool "ediff"]
	cmd = ec-merge "$LOCAL" "$REMOTE"
	trustExitCode = true
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
[merge]
	tool = emerge
[mergetool "emerge"]
	cmd = ec-merge "$LOCAL" "$REMOTE" "$MERGED"
#	cmd = ec-merge "$LOCAL" "$REMOTE" "$MERGED" "$BASE"
	trustExitCode = true
[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
#	cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[alias]
    sw = !git checkout $(git branch -a --format '%(refname:short)' | sed 's~origin/~~' | sort | uniq | fzf)
    root = rev-parse --show-toplevel
    fix = !edit $(git diff --name-only --relative --diff-filter=U | uniq)
    blog = log master..
	co = checkout
    ci = commit
# log --graph --abbrev-commit --decorate  --first-parent
[commit]
	template = /home/mfagan/.gitmessage
